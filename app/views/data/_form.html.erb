<%= form_for(@datum) do |f| %>
  <% if @datum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@datum.errors.count, "error") %> prohibited this datum from being saved:</h2>

      <ul>
      <% @datum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>:
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :source_type %>: 
    <%= select_tag :datum_source_type, options_for_select(Datum::SourceTypes), :name => "datum[source_type]",
    :'data-remote' => 'true',
    :'data-url' => url_for(:controller => :data, :action => :select_changed),
    :'data-type' => 'html'
%>
  </div>
  <div class="field" id="content_text">
    <%=
@type = Datum::SourceTypes.values.first
 render "select_changed" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
