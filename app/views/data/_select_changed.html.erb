<%= fields_for @datum do |f| %>
<% source_type = f.object.source_type %>
<% if source_type == "from_clip" or source_type.nil? or source_type.empty? %>
<%= f.label :content, "Content" %><br />
<%= f.text_area :content %>
<% elsif source_type == "download_url" or source_type == "live_url" %>
<%= f.label :content, "URL" %>: 
<%= f.text_field :url %>

<% end %>
<% end %>
